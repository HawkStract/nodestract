use capability IO { target: "stdout" }

module LogicTest

func main() {
    stract balance = 1000
    stract amount = 200

    IO.print("--- TEST LOGICA ---")
    IO.print("Saldo Iniziale:", balance)

    if amount < balance {
        balance = balance - amount
        IO.print("Pagamento OK. Nuovo saldo:", balance)
    }

    IO.print("--- TEST CICLO WHILE ---")
    stract count = 3
    while count > 0 {
        IO.print("Conto alla rovescia:", count)
        count = count - 1
    }

    IO.print("--- TEST CICLO FOR ---")
    for i in 1..4 {
        IO.print("Iterazione For numero:", i)
    }
    
    IO.print("--- TEST COMPLETATO ---")
}